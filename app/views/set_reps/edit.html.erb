<h1 class="center_this">Editing Set Rep</h1>


<%= simple_form_for(@set_rep) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-outline-primary' %>
  </div>
<% end %>
<hr>

<table class="table">
	<thead>
		<tr>
			<th>Percent</th>
			<th>Reps</th>
			<th>Submit</th>
		</tr>
	</thead>

	<tbody>
		<% @set_rep.set_rep_combos.each do |src| %>
		<tr>
			<%= simple_form_for(src) do |z| %>
			<!-- setrep, percent
				reps-->
				<td><%= z.input :percent %></td>
				<td><%= z.input :reps %></td>
				<td><%= z.button :submit, class: 'btn btn-outline-primary' %></td>
			<% end %>
		</tr>
		<% end %>
	</tbody>
</table>



<%= link_to 'Show', @set_rep %> |
<%= link_to 'Back', set_reps_path %>
