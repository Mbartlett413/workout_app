

<h1 class="center_this">Exercises</h1>
<%= link_to 'New Exercise', new_exercise_path, class: 'btn btn-outline-primary' %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Primary exercise</th>
      <th>Accesory exercise</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.title %></td>
        <td><%= exercise.primary_exercise %></td>
        <td><%= exercise.accesory_exercise %></td>
        <td><%= link_to 'Show', exercise %></td>
        <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
        <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


