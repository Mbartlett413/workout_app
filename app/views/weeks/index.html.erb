<h1 class="center_this">Weeks</h1><br><hr>

<%= link_to 'New Week', new_week_path, class: 'btn btn-outline-primary'  %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Active week</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weeks.each do |week| %>
      <tr>
        <td><%= week.title %></td>
        <td><%= week.active_week %></td>
        <td><%= link_to 'Show', week %></td>
        <td><%= link_to 'Edit', edit_week_path(week) %></td>
        <td><%= link_to 'Destroy', week, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


